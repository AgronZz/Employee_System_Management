
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EmployeeModel

<div class="container">
    <h2>Employee Details</h2>

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Surname</dt>
        <dd class="col-sm-9">@Model.Surname</dd>

        <dt class="col-sm-3">Monthly Salary</dt>
        <dd class="col-sm-9">@Model.Salary</dd>

        <dt class="col-sm-3">Total Contract Salary</dt>
        <dd class="col-sm-9">
            @if (Model.isActive)
            {
                var contractMonths = ((Model.ContractExpired.Year - Model.ContractSigned.Year) * 12) + Model.ContractExpired.Month - Model.ContractSigned.Month;
                var totalSalary = contractMonths * Model.Salary;

                @($"Total Salary for {contractMonths} months: {totalSalary}")
            }
            else
            {
                <span class="text-danger">We can't calculate because the employee is inactive.</span>
            }
        </dd>
        </dd>
        <dt class="col-sm-3">Contract Signed</dt>
        <dd class="col-sm-9">@Model.ContractSigned.ToShortDateString()</dd>

        <dt class="col-sm-3">Contract Expired</dt>
        <dd class="col-sm-9">@Model.ContractExpired.ToShortDateString()</dd>

        <dt class="col-sm-3">Active Status</dt>
        <dd class="col-sm-9">@Model.isActive</dd>

    </dl>

    <a asp-action="Main" class="btn btn-primary">Back to List</a>
</div>


