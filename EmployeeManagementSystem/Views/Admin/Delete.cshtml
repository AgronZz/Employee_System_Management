
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EmployeeModel

<div class="employee-container">
    <h2>Delete Employee</h2>
    <p>Are you sure you want to delete this employee?</p>

    <p class="employee-info">@Model.Name</p>
    <p class="employee-info">@Model.Surname</p>

    <form asp-action="DeleteConfirmed" method="post" class="form-container">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Main" class="btn btn-secondary">Cancel</a>
    </form>
</div>
<style>
    /* Page Background */
    body {
        background-color: #b3e5fc; /* Light blue solid background */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Centering Container */
    .employee-container {
        background-color: #e1f5fe; /* Slightly different shade of light blue for contrast */
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 50%;
        margin: 50px auto;
        text-align: center;
    }

    /* Heading Styling */
    h2 {
        color: #01579b;
        font-size: 2.2em;
        font-weight: bold;
        text-shadow: 1px 1px 2px #81d4fa;
    }

    /* Employee Info Styling */
    .employee-info {
        font-size: 1.5em;
        font-weight: bold;
        color: #0277bd;
        margin-bottom: 10px;
    }

    /* Form Styling */
    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        margin-top: 20px;
    }

    /* Button Styles */
    .btn {
        padding: 15px 30px;
        font-size: 1.2em;
        border-radius: 8px;
        border: none;
        outline: none;
        cursor: pointer;
    }

    .btn-danger {
        background-color: #0288d1; /* Ocean blue color for delete button */
        color: white;
    }

        .btn-danger:hover {
            background-color: #0277bd;
        }

    .btn-secondary {
        background-color: #8e8e8e;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #757575;
        }
</style>
