@{
    ViewData["Title"] = "Delete Non-Working Day";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EmployeeManagementSystem.Models.NonWorkingDay

<h2>Delete Non-Working Day</h2>

<p>Are you sure you want to delete this non-working day?</p>
<p>@Model.Date.ToString("d") - @Model.Description</p>

<form asp-action="DeleteNonWorkingDayConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Calendar")" class="btn btn-secondary">Cancel</a>
</form>
<style>
        /* Page Background */
    body {
        background: linear-gradient(135deg, #e0f7fa, #bbdefb);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    /* Page Heading */
    h2 {
        color: #1565c0;
        text-align: center;
        margin-top: 20px;
        font-weight: bold;
        text-shadow: 1px 1px 2px #90caf9;
    }

    /* Paragraph Styling */
    p {
        text-align: center;
        font-size: 1.1em;
        margin-bottom: 20px;
    }

    /* Form Styling */
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    /* Button Styles */
    .btn-danger {
        background-color: #e57373;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-danger:hover {
        background-color: #d32f2f;
        transform: translateY(-2px);
    }

    .btn-secondary {
        background-color: #90caf9;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-secondary:hover {
        background-color: #1565c0;
        transform: translateY(-2px);
    }

    /* Center Content */
    form, h2, p {
        max-width: 600px;
        margin: 0 auto;
    }


        p {
            font-size: 1em;
        }
    }

</style>