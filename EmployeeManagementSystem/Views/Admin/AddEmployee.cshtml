
@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EmployeeModel



<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control">
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control">
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContractSigned"></label>
        <input asp-for="ContractSigned" class="form-control" type="date" />
        <span asp-validation-for="ContractSigned" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContractExpired"></label>
        <input asp-for="ContractExpired" class="form-control" type="date" />
        <span asp-validation-for="ContractExpired" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="isActive"></label>
        <input type="checkbox" asp-for="isActive" class="form-check-input" />
        <span asp-validation-for="isActive" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add New Employee!</button>
</form>
