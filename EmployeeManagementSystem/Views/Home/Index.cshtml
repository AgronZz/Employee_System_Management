@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #b3e0ff; 
            font-family: 'Arial', sans-serif;
            color: #004d73;
            margin-bottom: 100px; 
        }

        .navbar {
            background-color: #007bff; 
        }

        .navbar a {
            color: white;
        }

        .welcome-section {
            background-color: #66b3ff; 
            color: white;
            padding: 100px 0;
            text-align: center;
            border-radius: 10px;
            margin: 50px 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .welcome-section h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
            font-family: 'Verdana', sans-serif;
        }

        .welcome-section p {
            font-size: 1.25rem;
        }

        .content-section {
            text-align: center;
            padding: 50px 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .content-section h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #004d73; 
        }

        .content-section ul {
            text-align: left;
            display: inline-block;
            margin-top: 20px;
        }

        .content-section ul li {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .footer {
            background-color: #66b3ff; 
            color: white;
            padding: 20px 0;
            text-align: center;
            width: 100%;
            font-size: 1rem;
            box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1); 
            margin-top: 50px; 
        }

        .background {
            background: url('https://source.unsplash.com/1600x900/?office') no-repeat center center fixed;
            background-size: cover;
            height: 100%;
            position: absolute;
            width: 100%;
            z-index: -1;
            opacity: 0.1;
        }
    </style>
</head>
<body>
    <div class="background"></div>

    <section class="welcome-section">
        <h1>Welcome to Our Employee Management System</h1>
        <p>Manage employee data, track holiday calendars, and provide performance reviews seamlessly.</p>
    </section>

    <section class="content-section">
        <h2>Key Features</h2>
        <ul>
            <li>Employee Reviews: Rate and manage employee performance.</li>
            <li>Holiday Calendar: Track company holidays and employee leave schedules.</li>
            <li>Employee Management: Add, update, and track employee data with ease.</li>
        </ul>
    </section>

    <section class="footer">
        <p>&copy; 2025 Employee Management System. All rights reserved.</p>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
