@model EmployeeManagementSystem.Models.ReviewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Review</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@if (!User.Identity.IsAuthenticated)
{
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="EmployeeId">Select Employee</label>
            <select asp-for="EmployeeId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.Employees, "Id", "FullName"))"></select>
        </div>

        <div class="form-group">
            <label for="Rating">Rating</label>
            <input asp-for="Rating" class="form-control" type="number" min="1" max="5" required />
        </div>

        <div class="form-group">
            <label for="Comment">Comment</label>
            <textarea asp-for="Comment" class="form-control" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}

