 @model List<EmployeeManagementSystem.Models.ReviewModel>
@{
    ViewData["Title"] = "Employee Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Employee Reviews</h1>

@if (Model.Count == 0)
{
    <p>No reviews available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Rating</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.Employee.Name @review.Employee.Surname</td>
                    <td>@review.Rating</td>
                    <td>@review.Comment</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Average Ratings</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Average Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rating in ViewBag.EmployeeRatings)
            {
                <tr>
                    <td>@rating.EmployeeName</td>
                    <td>@rating.AverageRating.ToString("0.0")</td>
                </tr>
            }
        </tbody>
    </table>
}
