 @model IEnumerable<EmployeeManagementSystem.Models.ReviewModel>
@{
    ViewData["Title"] = "All Employee Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EmployeeReviews</h1>

<h2 class="mt-4">@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p class="text-muted">No reviews are available.</p>
}
else
{
    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Employee Name</th>
                <th scope="col">Rating</th>
                <th scope="col">Comment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.Employee?.Name @review.Employee?.Surname</td> <!-- Display employee name -->
                    <td>@review.Rating</td>
                    <td>@review.Comment</td>
                </tr>
            }
        </tbody>
    </table>
}
